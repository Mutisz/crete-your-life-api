{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist/src",
    "typeRoots": ["src/@types/modules"],
    "target": "es6",
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "plugins": [
      {
        "name": "@divyenduz/ts-graphql-plugin"
      }
    ]
  }
}
