    "graphql-yoga": "^1.16.7",
    "http-errors": "^1.7.1",
    "prisma": "^1.19.3",
    "prisma-client-lib": "^1.19.3",
    "shortid": "^2.2.13"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.8.0",
