{
  "name": "crete-your-life-api",
  "version": "0.0.1",
  "description": "GraphQL API for Crete your Life trip booking application",
  "author": "Coral Software Mateusz Tokarski",
  "license": "GPL-3.0",
  "main": "src/index.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mutisz/crete-your-life-api"
  },
  "scripts": {
    "start": "cd dist && node --require dotenv/config src/index.js",
    "dev": "npm-run-all --parallel debug playground",
    "debug": "nodemon",
    "playground": "graphql playground",
    "zip": "zip dist/crete-your-life-api.zip -r dist package.json package-lock.json",
    "build": "npm-run-all generate build-typescript build-copy-schema build-copy-env",
    "build-typescript": "rm -rf dist && tsc",
    "build-copy-schema": "cp -r src/schema dist/src && cp -r src/codegen/prisma/schema dist/src/codegen/prisma",
    "build-copy-env": "cp .env dist",
    "generate": "npm-run-all generate-prisma generate-resolvers",
    "generate-prisma": "rm -rf src/codegen/prisma && prisma generate",
    "generate-resolvers": "rm -rf src/codegen/resolvers && graphqlgen",
    "deploy-prisma": "prisma deploy"
  },
  "dependencies": {
    "aws-sdk": "^2.453.0",
    "fixer-node": "^2.0.0",
    "graphql": "^14.3.0",
    "graphql-tag": "^2.10.1",
    "graphql-yoga": "^1.17.4",
    "http-errors": "^1.7.2",
    "prisma-binding": "^2.3.10",
    "prisma-client-lib": "^1.30.4",
    "shortid": "^2.2.14"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.25",
    "@types/lodash": "^4.14.126",
    "@types/shortid": "0.0.29",
    "@types/ws": "^6.0.1",
    "@typescript-eslint/eslint-plugin": "^1.8.0",
    "@typescript-eslint/parser": "^1.8.0",
    "graphql-resolver-codegen": "0.0.3",
    "graphqlgen": "0.6.0-rc5",
    "dotenv": "^8.0.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-prettier": "^3.0.1",
    "nodemon": "^1.19.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.17.0",
    "prisma": "^1.32.2",
    "ts-node": "^8.1.0",
    "typescript": "^3.4.5"
  }
}
